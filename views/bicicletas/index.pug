extends ../layout

block content
    div
        a(href="/bicicletas/create") Crear Bicicleta
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col') Acciones
        tbody
            each bici in bicis
                tr
                    th(scope='col')= bici.id
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td 
                        a(href=`/bicicletas/delete/`+bici.id class="btn btn-black") ELIMINAR
                        a(href=`/bicicletas/update/`+bici.id class="btn btn-primary") EDITAR